<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:org.gwtd3.demo.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.inline {
			display: inline-block;
			vertical-align: top;
			
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{style.inline}">
			innerRadius:<d:Slider 	ui:field="innerRadius"  min="0.0" 	max="100.0" 	value="20.0"/>
			outerRadius:<d:Slider 	ui:field="outerRadius" 	min="50.0" 	max="100.0" 	value="40.0"/>
			startAngle:<d:Slider 	ui:field="startAngle" 	min="0.0" 	max="6.30" 	value="0.0" />
			endAngle:<d:Slider 		ui:field="endAngle"  	min="0.0" 	max="6.30" 	value="3.14"/>
		</g:HTMLPanel>
		<d:SVGD3Widget ui:field="svgWidget" width="960" height="800" addStyleNames="{style.inline}"/>
	</g:HTMLPanel>
</ui:UiBinder> 